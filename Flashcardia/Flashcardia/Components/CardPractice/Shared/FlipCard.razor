
<div class="card-container w-100 h-100" @onclick="Flip">
    <div class="card-flip w-100 h-100 @GetFlipCss()">
        <!-- Front side -->
        <div class="card front w-100 h-100">
            <div class="d-flex flex-column text-center justify-content-center align-items-center w-100 h-100 ps-large-5 pe-large-5">
                <p>@Front</p>
            </div>
        </div>

        <!-- Back side -->
        <div class="card back w-100 h-100">
            <div class="d-flex flex-column text-center justify-content-center align-items-center w-100 h-100 ps-large-5 pe-large-5">
                <p>@Back</p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Front { get; set; } = string.Empty;

    [Parameter]
    public string Back { get; set; } = string.Empty;


    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        Flipped = false;
    }


    bool Flipped { get; set; } = false;

    void Flip() => Flipped = !Flipped;

    string GetFlipCss() => Flipped ? "flipped" : "";
}

